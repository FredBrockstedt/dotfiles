;; Themes
(load-theme 'wombat)

;; Startup message
(setq inhibit-startup-message t)

;; behavior 
(line-number-mode t)
(column-number-mode t)
(when (display-graphic-p)
  (tool-bar-mode -1)
  (scroll-bar-mode -1))

;; Macintosh
(when (eq system-type 'darwin)
  (setq mac-command-modifier 'meta))

;; Cursor movement
(windmove-default-keybindings)
;; make forward word behave more like vim
(global-set-key  (kbd "M-f") 'forward-to-word)

;; Spellchecking
(setenv "DICTIONARY" "de_DE")

;; backups to backup folder
(setq backup-directory-alist '(("" . "~/.emacs.d/backup")))

;; set encoding system
(setq locale-coding-system 'utf-8)
(set-terminal-coding-system 'utf-8)
(set-keyboard-coding-system 'utf-8)
(set-selection-coding-system 'utf-8)
(prefer-coding-system 'utf-8)

;; ido mode
(ido-mode t)

;; org-mode
(global-set-key (kbd "C-c o a") 'org-agenda)

;; Automatically enable lisp-mode for dot-emacs files
(add-to-list 'auto-mode-alist '("dot-emacs" . lisp-mode))

;; Package management with straight.el
;; see: https://github.com/radian-software/straight.el
(defvar bootstrap-version)
(let ((bootstrap-file
       (expand-file-name
        "straight/repos/straight.el/bootstrap.el"
        (or (bound-and-true-p straight-base-dir)
            user-emacs-directory)))
      (bootstrap-version 7))
  (unless (file-exists-p bootstrap-file)
    (with-current-buffer
        (url-retrieve-synchronously
         "https://raw.githubusercontent.com/radian-software/straight.el/develop/install.el"
         'silent 'inhibit-cookies)
      (goto-char (point-max))
      (eval-print-last-sexp)))
  (load bootstrap-file nil 'nomessage))

;; ace-window
(straight-use-package 'ace-window)
(global-set-key (kbd "M-o") 'ace-window)

;; avy - quick cursor movement
(straight-use-package 'avy)
(global-set-key (kbd "M-s") 'avy-goto-char)

;; open default org-file
(find-file "~/todo.org")
