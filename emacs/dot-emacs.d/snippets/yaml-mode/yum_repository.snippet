    gpgcakey: ${14:value}                                                  # A URL pointing to the ASCII-armored CA key file for the repository 
    gpgcheck: ${15:value}                                                  # Tells yum whether or not it should perform a GPG signature check on packages  No default setting  If the value is not se
    gpgkey: ${16:value}                                                    # A URL pointing to the ASCII-armored GPG key file for the repository  It can also be a list of multiple URLs 
    http_caching: ${17$$(yas-choose-value '("all" "packages" "none"))}     # choices: all;packages;none  Determines how upstream HTTP caches are instructed to handle any HTTP downloads that Yum doe
    include: ${18:value}                                                   # Include external configuration file  Both, local path and URL is supported  Configuration file will be inserted at the p
    includepkgs: ${19:value}                                               # List of packages you want to only use from a repository  This should be a space separated list  Shell globs using wildca
    ip_resolve: ${20$$(yas-choose-value '("4" "6" "IPv4" "IPv6" "whatever"))}# choices: 4;6;IPv4;IPv6;whatever  Determines how yum resolves host names  C(4) or C(IPv4) - resolve to IPv4 addresses o
    keepalive: ${21:false}                                                 # This tells yum whether or not HTTP/1 1 keepalive should be used with this repository  This can improve transfer speeds b
    keepcache: ${22$$(yas-choose-value '("0" "1"))}                        # choices: 0;1  Either C(1) or C(0)  Determines whether or not yum keeps the cache of headers and packages after successfu
    metadata_expire: ${23:21600}                                           # Time (in seconds) after which the metadata will expire  Default value is 6 hours 
    metadata_expire_filter: ${24$$(yas-choose-value '("never" "read-only:past" "read-only:present" "read-only:future"))}# choices: never;read-only:past;read-only:present;read-only:future  Filter th
    metalink: ${25:value}                                                  # Specifies a URL to a metalink file for the repomd xml, a list of mirrors for the entire repository are generated by conv
    mirrorlist: ${26:value}                                                # Specifies a URL to a file containing a list of baseurls  This, the I(baseurl) or I(metalink) parameters are required if 
    mirrorlist_expire: ${27:21600}                                         # Time (in seconds) after which the mirrorlist locally cached will expire  Default value is 6 hours 
    password: ${28:value}                                                  # Password to use with the username for basic authentication 
    priority: ${29:99}                                                     # Enforce ordered protection of repositories  The value is an integer from 1 to 99  This option only works if the YUM Prio
    protect: ${30:false}                                                   # Protect packages from updates from other repositories 
    proxy: ${31:value}                                                     # URL to the proxy server that yum should use  Set to C(_none_) to disable the global proxy setting 
    proxy_password: ${32:value}                                            # Password for this proxy 
    proxy_username: ${33:value}                                            # Username to use for proxy 
    repo_gpgcheck: ${34:false}                                             # This tells yum whether or not it should perform a GPG signature check on the repodata from this repository 
    reposdir: ${{35:/etc/yum}                                              #repos d} # not required  Directory where the C( repo) files will be stored 
    retries: ${36:10}                                                      # Set the number of times any attempt to retrieve a file should retry before returning an error  Setting this to C(0) make
    s3_enabled: ${37:false}                                                # Enables support for S3 repositories  This option only works if the YUM S3 plugin is installed 
