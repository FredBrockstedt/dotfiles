    sslverify: ${43:true}                                                  # Defines whether yum should verify SSL certificates/hosts at all 
    state: ${44$$(yas-choose-value '("absent" "present"))}                 # choices: absent;present  State of the repo file 
    throttle: ${45:value}                                                  # Enable bandwidth throttling for downloads  This option can be expressed as a absolute data rate in bytes/sec  An SI pref
    timeout: ${46:30}                                                      # Number of seconds to wait for a connection before timing out 
    ui_repoid_vars: ${47:"releasever basearch"}                            # When a repository id is displayed, append these yum variables to the string if they are used in the I(baseurl)/etc  Vari
    username: ${48:value}                                                  # Username to use for basic authentication to a repo or really any url 
    mode: ${49:value}                                                      # The permissions the resulting file or directory should have  For those used to I(/usr/bin/chmod) remember that modes are
    owner: ${50:value}                                                     # Name of the user that should own the file/directory, as would be fed to I(chown) 
