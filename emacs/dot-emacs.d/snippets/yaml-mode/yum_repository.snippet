# -*- mode: snippet -*-
# name: Add or remove YUM repositories
# prefix: yum_repository_snippet
# key: yum_repository
# group: ansible
# --

- name: ${0:Add or remove YUM repositories}
  yum_repository:                                                          
    name: ${1:Unique repository ID}                                        # This option builds the section name of the repository in the repo file  This parameter is only required if I(state) is s
    async: ${2:true}                                                       # If set to C(yes) Yum will download packages and metadata from this repo in parallel, if possible 
    bandwidth: ${3:0}                                                      # Maximum available network bandwidth in bytes/second  Used with the I(throttle) option  If I(throttle) is a percentage an
    baseurl: ${4:value}                                                    # URL to the directory where the yum repository's 'repodata' directory lives  It can also be a list of multiple URLs  This
    cost: ${5:1000}                                                        # Relative cost of accessing this repository  Useful for weighing one repo's packages as greater/less than any other 
    deltarpm_metadata_percentage: ${6:100}                                 # When the relative size of deltarpm metadata vs pkgs is larger than this, deltarpm metadata is not downloaded from the re
    deltarpm_percentage: ${7:75}                                           # When the relative size of delta vs pkg is larger than this, delta is not used  Use C(0) to turn off delta rpm processing
    description: ${8:value}                                                # A human readable string describing the repository  This option corresponds to the "name" property in the repo file  This
    enabled: ${9:true}                                                     # This tells yum whether or not use this repository 
    enablegroups: ${10:true}                                               # Determines whether yum will allow the use of package groups for this repository 
    exclude: ${11:value}                                                   # List of packages to exclude from updates or installs  This should be a space separated list  Shell globs using wildcards
