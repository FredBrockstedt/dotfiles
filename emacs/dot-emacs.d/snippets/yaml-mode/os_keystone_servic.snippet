# -*- mode: snippet -*-
# name: Manage OpenStack Identity services
# prefix: os_keystone_service_snippet
# key: os_keystone_servic
# group: ansible
# --

- name: ${0:Manage OpenStack Identity services}
  os_keystone_service:                                                     
    name: ${1:Name of the service}                                         #
    service_type: ${2:The type of service}                                 #
    description: ${3:value}                                                # Description of the service
    enabled: ${4:true}                                                     # Is the service enabled
    state: ${5$$(yas-choose-value '("present" "absent"))}                  # choices: present;absent  Should the resource be present or absent 
    availability_zone: ${6:value}                                          # Ignored  Present for backwards compatibility
    cloud: ${7:value}                                                      # Named cloud or cloud config to operate against  If I(cloud) is a string, it references a named cloud config as defined i
    auth: ${8:value}                                                       # Dictionary containing auth information as needed by the cloud's auth plugin strategy  For the default I(password) plugin
    auth_type: ${9:value}                                                  # Name of the auth plugin to use  If the cloud uses something other than password authentication, the name of the plugin s
    region_name: ${10:value}                                               # Name of the region 
    wait: ${11:True}                                                       # Should ansible wait until the requested resource is complete 
    timeout: ${12:180}                                                     # How long should ansible wait for the requested resource 
    api_timeout: ${13:value}                                               # How long should the socket layer wait before timing out for API calls  If this is omitted, nothing will be passed to the
    validate_certs: ${14:False}                                            # Whether or not SSL API requests should be verified  Before Ansible 2 3 this defaulted to C(yes) 
    ca_cert: ${15:value}                                                   # A path to a CA Cert bundle that can be used as part of verifying SSL API requests 
    client_cert: ${16:value}                                               # A path to a client certificate to use as part of the SSL transaction 
    client_key: ${17:value}                                                # A path to a client key to use as part of the SSL transaction 
    interface: ${18$$(yas-choose-value '("admin" "internal" "public"))}    # choices: admin;internal;public  Endpoint URL type to fetch from the service catalog 
