    startup_query_interval: ${3:value}                                     # Query interval used when the IGMP process starts up  The range is from 1 to 18000 or keyword 'default'  The default is 3
    startup_query_count: ${4:value}                                        # Query count used when the IGMP process starts up  The range is from 1 to 10 or keyword 'default'  The default is 2 
    robustness: ${5:value}                                                 # Sets the robustness variable  Values can range from 1 to 7 or keyword 'default'  The default is 2 
