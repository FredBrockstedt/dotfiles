    last_member_query_count: ${10:value}                                   # Sets the number of times that the software sends an IGMP query in response to a host leave message  Values can range fro
    group_timeout: ${11:value}                                             # Sets the group membership timeout for IGMPv2  Values can range from 3 to 65,535 seconds or keyword 'default'  The defaul
    report_llg: ${12:value}                                                # Configures report-link-local-groups  Enables sending reports for groups in 224 0 0 0/24  Reports are always sent for non
    immediate_leave: ${13:value}                                           # Enables the device to remove the group entry from the multicast routing table immediately upon receiving a leave message
    oif_routemap: ${14:value}                                              # Configure a routemap for static outgoing interface (OIF) or keyword 'default' 
    oif_prefix: ${15:value}                                                # This argument is deprecated, please use oif_ps instead  Configure a prefix for static outgoing interface (OIF) 
    oif_source: ${16:value}                                                # This argument is deprecated, please use oif_ps instead  Configure a source for static outgoing interface (OIF) 
