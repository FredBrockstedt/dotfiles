    execution_role_arn: ${9:value}                                         # The Amazon Resource Name (ARN) of the task execution role that the Amazon ECS container agent and the Docker daemon can 
    volumes: ${10:value}                                                   # A list of names of volumes to be attached
    launch_type: ${11$$(yas-choose-value '("EC2" "FARGATE"))}              # choices: EC2;FARGATE  The launch type on which to run your task
    cpu: ${12:value}                                                       # The number of cpu units used by the task  If using the EC2 launch type, this field is optional and any value can be used
    memory: ${13:value}                                                    # The amount (in MiB) of memory used by the task  If using the EC2 launch type, this field is optional and any value can b
