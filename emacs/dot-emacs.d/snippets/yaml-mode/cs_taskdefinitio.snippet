    arn: ${2:value}                                                        # The arn of the task description to delete
    family: ${3:value}                                                     # A Name that would be given to the task definition
    revision: ${4:value}                                                   # A revision number for the task definition
    force_create: ${5:value}                                               # Always create new task definition
    containers: ${6:value}                                                 # A list of containers definitions
