RESET="\[\017\]"
NORMAL="\[\033[0m\]"
RED="\[\033[31;1m\]"
BLUE="\[\033[34;1m\]"
GREEN="\[\033[32;1m\]"
YELLOW="\[\033[33;1m\]"
WHITE="\[\033[37;1m\]"

PS1="${RESET}[\$(date +%H:%M)] ${GREEN}\u@\h:${BLUE}\W${NORMAL} \n${WHITE}$ ${NORMAL}"
